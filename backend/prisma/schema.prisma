generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teams     Team[]
  analyses  Analysis[]
}

// Team model (favorite sports teams)
model Team {
  id        Int     @id @default(autoincrement())
  userId    Int
  teamName  String
  sport     String
  createdAt DateTime @default(now())

  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)
  games     Game[]

  @@unique([userId, teamName, sport])
}

// Game model (game history)
model Game {
  id              Int     @id @default(autoincrement())
  teamId          Int
  opponent        String
  score           Int
  opponentScore   Int
  date            DateTime
  venue           String?
  gameStatus      String
  createdAt       DateTime @default(now())

  team            Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  playerStats     PlayerStat[]
}

// Player stats for each game
model PlayerStat {
  id        Int     @id @default(autoincrement())
  gameId    Int
  playerName String
  points    Int
  rebounds  Int?
  assists   Int?
  createdAt DateTime @default(now())

  game      Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
}

// Analysis model (store chat history)
model Analysis {
  id        Int     @id @default(autoincrement())
  userId    Int
  teamId    Int?
  question  String
  response  String
  createdAt DateTime @default(now())

  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)
}